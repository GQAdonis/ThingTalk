TestComputeApp() {
    module random {
        event out(x : Number);
        function ask() {
            out(Math.floor(42 + Math.random() * 42));
        }
    }

    @builtin.timer(30s) => @random.ask();
    @random.out(x) => @builtin.debug_log('number: ' + $toString(x));
}

