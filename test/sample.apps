SabrinaChangeNestTemperature(Thermostat : String) {
@sabrina.listen(text), $regex(text, "set\\s+nest\\s+temp(?:erature)?\\s+(?:to\\s+)?([0-9\\.]+)\\s*C?", "i", temp) =>
@(type="thermostat", name=Thermostat).set_target_temperature($valueOf(temp)*1C);
}

