SabrinaLikesItHot(Thermostat : String, Threshold : Measure(C)) {
@(type="thermostat", name=Thermostat).temperature(_, t), t > Threshold => @builtin.notify("bla");
@(type="thermostat", name=Thermostat).temperature(_, t), t > Threshold => @builtin.notify("bla " + $toString(t));
@(type="thermostat", name=Thermostat).temperature(_, t), t > Threshold => @builtin.notify("bla " + $toString($random()));
}

